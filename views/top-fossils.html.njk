{% extends "base.html.njk" %}

{% block title %}Top Fossils{% endblock %}

{% block header %}Top Fossils{% endblock %}

{% block content %}
    <h2>Welcome, {{ userName }}!</h2>
    <form action="/like-fossil" method="post">
        <label for="fossil">Select a fossil to like:</label>
     <select id="fossil" name="fossil">
            {% for key, fossil in fossils %}
                <option value="{{ key }}">{{ fossil.name }}</option>
      {% endfor %}
        </select>
        <button type="submit">Like Fossil</button>
    </form>
    
    <h2>Most Liked Fossils</h2>
    <ul>
        {% for key, fossil in fossils %}
          <li>
                <img src="{{ fossil.img }}" alt="{{ fossil.name }}">
                <h3>{{ fossil.name }}</h3>
          <p>Likes: {{ fossil.num_likes }}</p>
            </li>
        {% endfor %}
    </ul>
    <!-- Your top fossils content here -->
{% endblock %}

